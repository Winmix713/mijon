# ============================================================================
# Local Development Environment Configuration
# Copy this file to .env.local and fill in your local values
# ============================================================================

# ============================================================================
# LOCAL SUPABASE CONFIGURATION
# Use these values when running `supabase start` locally
# ============================================================================

# Local Supabase project URL (typically http://localhost:54321)
VITE_SUPABASE_URL=http://localhost:54321

# Local Supabase anonymous key (get from `supabase status` after supabase start)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Local database URL for migrations and scripts
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ============================================================================
# FEATURE FLAGS - Local Development
# ============================================================================

VITE_PHASE3_ENABLED=true
VITE_PHASE4_ENABLED=true
VITE_PHASE5_ENABLED=true
VITE_PHASE6_ENABLED=true
VITE_PHASE7_ENABLED=true
VITE_PHASE8_ENABLED=true
VITE_PHASE9_ENABLED=true

# ============================================================================
# LOCAL DEVELOPMENT SETTINGS
# ============================================================================

VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug
VITE_API_URL=http://localhost:5173
