# ============================================================================
# Supabase Configuration
# ============================================================================

# Supabase project URL (get from Supabase dashboard)
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public, safe to expose)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (keep private, for backend only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# Database Configuration (for Supabase CLI)
# ============================================================================

# Local development database URL (for supabase start)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ============================================================================
# Feature Flags
# ============================================================================

# Phase 3 - Scheduled Jobs
VITE_PHASE3_ENABLED=true

# Phase 4 - Feedback Loop & Analytics
VITE_PHASE4_ENABLED=true

# Phase 5 - Pattern Detection
VITE_PHASE5_ENABLED=true

# Phase 6 - Champion/Challenger Framework
VITE_PHASE6_ENABLED=true

# Phase 7 - Cross-League Intelligence
VITE_PHASE7_ENABLED=true

# Phase 8 - Monitoring & Visualization
VITE_PHASE8_ENABLED=true

# Phase 9 - Collaborative Market Intelligence
VITE_PHASE9_ENABLED=true

# ============================================================================
# API Configuration
# ============================================================================

# API base URL
VITE_API_URL=http://localhost:5173

# ============================================================================
# Analytics & Monitoring
# ============================================================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Cloudflare Analytics token (optional)
VITE_CLOUDFLARE_TOKEN=

# ============================================================================
# Development Configuration
# ============================================================================

# Development mode
VITE_DEV_MODE=true

# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=debug
